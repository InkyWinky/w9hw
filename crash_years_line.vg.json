{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/InkyWinky/w9hw/refs/heads/main/geocoded_locations_new_aus_only.csv"},
  "title":"Number of Fatal Plane Crashes Over the Years",
  "vconcat": [{
    "width": 460,
    "mark": {"type":"area",
    "color": "#4c78a7" },
    "title": "Focus View",
    "encoding": {
      "x": {
        "field": "year",
        "type": "temporal",
        "scale": {"domain": {"param": "brush"}},
        "axis": {"title": ""}
      },
      "y": {"aggregate": "count", "type": "quantitative", "title": "Number of fatal crashes"}
    }
  }, {
    "title": "Overall View",
    "width": 480,
    "height": 60,
    "mark": "area",
    "params": [{
      "name": "brush",
      "select": {"type": "interval", "encodings": ["x"]}
    }],
    "encoding": {
      "x": {"field": "year", "type": "temporal"},
      "y": {"aggregate": "count", "type": "quantitative", "title": "Number of fatal crashes"}
    }
  }],
  "config": {
      "background": null,
      "axis": {
        "grid": false  
      }
    }
}
