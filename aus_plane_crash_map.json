{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/InkyWinky/w9hw/refs/heads/main/au-states-topo.json",
        "format": {
          "type": "topojson",
          "feature": "austates"
        }
      },
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/InkyWinky/w9hw/refs/heads/main/geocoded_locations_new_aus_only.csv"
      },
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "image",
            "url": "https://raw.githubusercontent.com/InkyWinky/w9hw/refs/heads/main/airplane-icon.png",
            "width": 15,
            "height": 15,
            "tooltip": true
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {"value": 10},
        "color": {"value": "steelblue"},
        "tooltip":[{
            "field": "Locations", "title": "Location",
            "type": "nominal"
        
          },
          {
            "field": "fatalities", "title": "Fatalities",
            "type": "nominal"
          }]
      },
      "config": {
      "background": null,
      "axis": {
        "grid": false  
      }
    }
  ]
}
